{
    "name": "time-attendance-jkt",
    "private": true,
    "version": "0.0.1",
    "type": "module",
    "scripts": {
        "db": "dotenv -e .env pnpm prisma db pull && pnpm prisma generate",
        "db:dev": "dotenv -e .env.dev pnpm prisma db pull && pnpm prisma generate",
        "db:docker": "dotenv -e .env.docker pnpm prisma generate",
        "dev": "dotenv -e .env.dev -- vite dev --mode dev",
        "dev:docker": "dotenv -e .env.docker -- vite dev --mode docker",
        "build": "dotenv -e .env -- vite build",
        "build:dev": "dotenv -e .env.dev -- vite build --mode dev",
        "build:docker": "dotenv -e .env.docker -- vite build --mode docker",
        "test": "vitest",
        "preview": "vite preview",
        "preview:dev": "dotenv -e .env.dev -- vite preview --mode dev",
        "fs": "cd ./express && npm run start",
        "file-server": "cd ./express && npm run start",
        "prepare": "svelte-kit sync || echo ''",
        "check": "svelte-kit sync && svelte-check --tsconfig ./tsconfig.json",
        "check:watch": "svelte-kit sync && svelte-check --tsconfig ./tsconfig.json --watch",
        "prod": "pnpm build && pnpm preview",
        "prod1500": "pnpm build && pnpm preview --port 1500"
    },
    "devDependencies": {
        "@event-calendar/core": "^3.12.0",
        "@event-calendar/day-grid": "^3.12.0",
        "@event-calendar/interaction": "^3.12.0",
        "@event-calendar/list": "^3.12.0",
        "@event-calendar/resource-time-grid": "^3.12.0",
        "@event-calendar/resource-timeline": "^3.12.0",
        "@event-calendar/time-grid": "^3.12.0",
        "@lucide/svelte": "^0.562.0",
        "@prisma/client": "^6.6.0",
        "@sveltejs/adapter-node": "^5.2.12",
        "@sveltejs/enhanced-img": "^0.6.0",
        "@sveltejs/kit": "^2.16.0",
        "@sveltejs/vite-plugin-svelte": "^5.0.0",
        "@tailwindcss/forms": "^0.5.9",
        "@tailwindcss/typography": "^0.5.15",
        "@tailwindcss/vite": "^4.0.0",
        "@types/crypto-js": "^4.2.2",
        "@types/jsonwebtoken": "^9.0.9",
        "@vincjo/datatables": "2.5.0",
        "flowbite": "^3.1.2",
        "flowbite-svelte-icons": "^2.0.2",
        "prisma": "^6.6.0",
        "svelte": "^5.39.3",
        "svelte-check": "^4.0.0",
        "tailwind-variants": "1.0.0",
        "tailwindcss": "^4.0.0",
        "tw-animate-css": "1.3.5",
        "typescript": "^5.0.0",
        "vite": "^6.0.0",
        "vitest": "^3.1.2"
    },
    "dependencies": {
        "@tanstack/svelte-query": "6.0.0",
        "@types/cryptojs": "^3.1.33",
        "axios": "^1.8.1",
        "balloon-css": "1.2.0",
        "chart.js": "^4.5.0",
        "chartjs-plugin-datalabels": "^2.2.0",
        "classnames": "^2.5.1",
        "crypto-js": "^4.2.0",
        "date-fns": "^4.1.0",
        "date-fns-tz": "^3.2.0",
        "dotenv": "^17.2.3",
        "dotenv-cli": "^11.0.0",
        "express": "^5.1.0",
        "flatpickr": "4.6.13",
        "flowbite-svelte": "^0.48.4",
        "jsonwebtoken": "^9.0.2",
        "jspdf": "^3.0.1",
        "jspdf-autotable": "^5.0.2",
        "svelecte": "^5.1.5",
        "svelte-chartjs": "^3.1.5",
        "svelty-picker": "^5.2.11",
        "uuid": "^13.0.0",
        "xlsx": "0.18.5",
        "zod": "^3.24.2",
        "zod-validation-error": "^3.4.0"
    }
}